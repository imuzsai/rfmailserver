---
# {{ ansible_managed }}
## Default Logstash configuration from logstash-docker.
## from https://github.com/elastic/logstash-docker/blob/master/build/logstash/config/logstash-oss.yml
#
path.config: /usr/share/logstash/pipeline

http.host: "0.0.0.0"
xpack.monitoring.elasticsearch.hosts: [ "http://127.0.0.1:9200" ]

## X-Pack security credentials
#
xpack.monitoring.enabled: true
xpack.monitoring.elasticsearch.username: {{ ELK_ELASTISEARCH_USER }}
xpack.monitoring.elasticsearch.password: {{ ELK_ELASTISEARCH_PASSWORD }}
